<div class="form-signin">
  <%= form_for(resource, :url => user_session_path) do |f| %>
    <h2 class="form-signin-heading">Please sign in</h2>
    <%= f.text_field :email, :class => "input-block-level", :placeholder => "Email address" %>
    <%= f.password_field :password, :class => "input-block-level", :placeholder => "Password" %>
    <label class="checkbox">
      <%= f.check_box :remember_me %> Remember me
    </label>
    <%= link_to h("Sign up"), new_user_registration_path, :class => "btn ajax-modal" %>
    <%= f.submit "Sign In", :class => "btn btn btn-primary" %> 
  <% end %>
</div>
