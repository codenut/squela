<%= stylesheet_link_tag  'bootstrap-datetimepicker.min', :media => 'all' %>
<div class="row-fluid">
  <div class="span12 panel">
    <span class="title">
      Details
    </span>
    <div class="content">
      <fieldset>
        <div class="row-fluid">
          <div class="span12">
            <div class="control-group">
              <label class="control-label">Summary: <span class="required">*</span></label>
              <div class="controls">
                <%= f.text_field :summary, :style => "width: 96%"%>
              </div>
            </div>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span6">
            <div class="control-group">
              <label class="control-label">Type: </label>
              <div class="controls">
                <%= f.select :type_id, options_for_select(WorkitemType.all_cached.map { |type| [type.name, type.id] }, @workitem.type_id), {} %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Status: </label>
              <div class="controls">
                <%= f.select :status_id, options_for_select(WorkitemStatus.all_cached.map { |status| [status.name, status.id] }, @workitem.status_id), {} %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Owned by: </label>
              <div class="controls">
                <%= f.text_field :user_id %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Tags: </label>
              <div class="controls">
                <%= f.text_field :tags %>
              </div>
            </div>
          </div>
          <div class="span6">
            <div class="control-group">
              <label class="control-label">Points: </label>
              <div class="controls">
                <%= f.select :points, options_for_select([['1', 1], ['2', 2], ['3', 3]], @workitem.points), {} %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Priority: </label>
              <div class="controls">
                <%= f.select :priority_id, options_for_select(Priority.all_cached.map { |priority| [priority.name, priority.id] }, @workitem.priority_id), {} %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Estimate: </label>
              <div class="controls">
                <%= f.text_field :estimate %>
              </div>
            </div>
            <div class="control-group">
              <label class="control-label">Due date: </label>
              <div class="controls">
                <div id="datetimepicker1" class="input-append date" style="width: 82%">
                  <%= f.text_field :due_date, "data-format" => "yyyy-MM-dd", :style => "width: 100%", :readonly => "true"%>
                  <span class="add-on">
                    <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </fieldset>
    </div>
  </div>
</div>
<%= javascript_include_tag 'bootstrap-datetimepicker.min' %>
<script>
  $(function() {
    $("#datetimepicker1").datetimepicker({ pickTime: false }); 
  });
</script>
