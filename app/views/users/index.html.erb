<div class="box-content">
  <div style="float: left">
    <h4 class="width: 100px">
      Search Users 
    </h4>
  </div>
  <div class="btn-group" style="float: right">
    <a href="#create_user" class="btn" data-toggle="modal"><i class="icon-envelope"></i>&nbsp; Invite User</a>
    <%= link_to new_user_path, :class => 'btn ajax-modal'  do %><i class="icon-plus"></i>&nbsp; Add User<%end%>
  </div>
  <br/>
  <br/>
  <br/>
  <div id="box-0" class="box" >
    <div class="box-header round-top">
      <div>
        <table width="100%">
          <tr>
            <td>
              Name: &nbsp; <input type="text" style="width: 64%"/> 
            </td>
            <td>
              Type: <select style="width: 70%">
                <option>All</option>
                <option>Story</option>
                <option>Task</option>
                <option>Defect</option>
              </select>
            </td>
            <td>
              Status: &nbsp;<select style="width: 70%">
                <option>All</option>
                <option>In Progress</option>
                <option>Done</option>
                <option>Resolved</option>
              </select>
            </td>
            <td>
              Rows: &nbsp; <select style="width: 60%">
                <option>10</option>
                <option>25</option>
                <option>50</option>
              </select> 
            </td>
          </tr>
        </table>
      </div>
    </div>         
    <div class="box-container-toggle">
      <br/>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Username</th>
            <th>Full Name</th>
            <th>Login Details</th>
            <th>Status</th>
            <th></th>
          </tr>
        </thead>   
        <tbody>
          <tr>
            <td><a href="#"><i class="icon-user"></i>&nbsp;jdoe@gmail.com</a></td>
            <td class="center">
              <a href="#">
